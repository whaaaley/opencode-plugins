{
  "fmt": {
    "lineWidth": 240,
    "semiColons": false,
    "singleQuote": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/fs": "jsr:@std/fs@1",
    "@std/path": "jsr:@std/path@1",
    "@std/testing": "jsr:@std/testing@1"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-run",
    "test:watch": "deno test --allow-read --allow-write --allow-run --watch",
    "test:whitespace": "deno test --allow-read --allow-write plugins/whitespace-trimmer/",
    "test:fmt": "deno test --allow-read --allow-write --allow-run plugins/deno-fmt/"
  }
}
